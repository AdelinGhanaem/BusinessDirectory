<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">


  <listener>
    <listener-class>com.businessdirecotory.server.GuiceServerModule</listener-class>
  </listener>


  <servlet>
    <servlet-name>uploader</servlet-name>
    <servlet-class>com.businessdirecotory.server.comunication.ImageUploader</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>uploader</servlet-name>
    <url-pattern>/upload</url-pattern>
  </servlet-mapping>



  <filter>
    <filter-name>filter</filter-name>
    <filter-class>com.google.inject.servlet.GuiceFilter</filter-class>
  </filter>
  <!---->
  <filter-mapping>
    <filter-name>filter</filter-name>
    <url-pattern>/businessdirecotory/ActionDispatcherService</url-pattern>
  </filter-mapping>


</web-app>

