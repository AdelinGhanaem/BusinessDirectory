<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:base="urn:import:com.github.gwtbootstrap.client.ui.base"
             xmlns:editors="urn:import:com.businessdirecotory.client.companyprofile.view">
  <ui:style>
    .controlGroup {
      margin: 5px;
    }

    .editorContainer {
      float: left;
    }

    .controlLabel {
      text-align: left;
    }

    .cleaner {
      clear: both;
    }

    .image {
      float: left;
    }

  </ui:style>

  <ui:with field="res" type="com.businessdirecotory.client.resources.ImagesResource"/>

  <b:Fieldset>

    <g:Image ui:field="logo"/>
    <g:HTMLPanel addStyleNames="{style.editorContainer}">
      <g:HTMLPanel addStyleNames="{style.image}">
        <g:Image ui:field="image" addStyleNames="{style.controlGroup}" url=""/>

      </g:HTMLPanel>
      <editors:CompanyInformationEditor ui:field="info"/>
      <editors:AddressEditor ui:field="address"/>
      <div class="cleaner"></div>
    </g:HTMLPanel>

  </b:Fieldset>

</ui:UiBinder>