<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:editors="urn:import:com.businessdirecotory.client.companyprofile.view">
  <ui:style>
    .controlGroup {
      margin: 5px;
    }

    .editorContainer {
      margin: auto;
    }

    .controlLabel {
      text-align: left;
    }

    .cleaner {
      clear: both;
    }

    .image {
      float: left;
    }

    .address {
      text-align: center;
      padding: 10px;
      margin: auto;

    }

    .info {
      text-align: center;
      padding: 10px;
      margin: auto;
    }



  </ui:style>

  <ui:with field="res" type="com.businessdirecotory.client.resources.ImagesResource"/>

  <b:Fieldset>

    <g:Image ui:field="logo"/>
    <g:HTMLPanel addStyleNames="{style.editorContainer}">
      <!--<g:HTMLPanel addStyleNames="{style.image}">-->
      <!--<g:Image ui:field="image" addStyleNames="{style.controlGroup}" url=""/>-->
      <!--</g:HTMLPanel>-->
      <g:HTMLPanel addStyleNames="{style.info}">
        <b:Button ui:field="showInfo" text="Основна Информация" block="true"/>
        <g:DisclosurePanel animationEnabled="true" ui:field="disclosureInfoPanel" addStyleNames="{style.info}" open="true">
          <editors:CompanyInformationEditor ui:field="info"/>
        </g:DisclosurePanel>
      </g:HTMLPanel>


      <g:HTMLPanel addStyleNames="{style.address}">
        <b:Button ui:field="showAddress" text="Адрес" block="true"/>
        <g:DisclosurePanel animationEnabled="true" ui:field="disclosureAddressPanel" addStyleNames="{style.info}">
          <editors:AddressEditor ui:field="address"/>
        </g:DisclosurePanel>
      </g:HTMLPanel>
      <div class="cleaner"></div>
    </g:HTMLPanel>

  </b:Fieldset>

</ui:UiBinder>