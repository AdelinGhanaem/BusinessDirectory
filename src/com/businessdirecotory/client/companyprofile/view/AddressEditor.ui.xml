<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:map='urn:import:com.google.gwt.maps.client'
        >
  <ui:style>
    .controlLabel {

    }

    .containser {
      margin: auto;
      text-align: center;

    }

    .panel {

      margin: 5px;
      text-align: center;

    }
  </ui:style>

  <g:HTMLPanel addStyleNames="{style.containser}">
    <legend>Адрес</legend>

    <g:HorizontalPanel>

      <g:HTMLPanel addStyleNames="{style.panel}">
        <b:ControlGroup type="NONE">
          <b:ControlLabel for="county" addStyleNames="{style.controlLabel}">Държава</b:ControlLabel>
          <b:Controls>
            <b:TextBox placeholder="Държава" ui:field="county"/>
          </b:Controls>
        </b:ControlGroup>

        <b:ControlGroup type="NONE">
          <b:ControlLabel for="city" addStyleNames="{style.controlLabel}">Град</b:ControlLabel>
          <b:Controls>
            <b:TextBox placeholder="Град" ui:field="city"/>
          </b:Controls>
        </b:ControlGroup>


        <b:ControlGroup type="NONE">
          <b:ControlLabel for="street" addStyleNames="{style.controlLabel}">Улица</b:ControlLabel>
          <b:Controls>
            <b:TextBox placeholder="Улица" ui:field="street"/>
          </b:Controls>
        </b:ControlGroup>


        <b:ControlGroup type="NONE">
          <b:ControlLabel for="description" addStyleNames="{style.controlLabel}">Допълнителна информация
          </b:ControlLabel>
          <b:Controls>
            <b:TextBox placeholder="Допълнителна информация" ui:field="description"/>
          </b:Controls>
        </b:ControlGroup>
      </g:HTMLPanel>

      <g:HTMLPanel addStyleNames="{style.panel}">
        <g:SimplePanel ui:field="mapWrapper">

        </g:SimplePanel>
      </g:HTMLPanel>
    </g:HorizontalPanel>


