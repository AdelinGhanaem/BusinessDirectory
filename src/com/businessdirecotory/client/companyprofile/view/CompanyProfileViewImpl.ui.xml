  <ui:with field="res" type="com.businessdirecotory.client.resources.ImagesResource"/>
  <ui:style>
    .tabPanel {
      border: 1px solid black;
    }

    .container {
      border: 1px solid #cccccc;
      width: 90%;
      border-radius: 10px;
      margin: auto;
      padding: 10px;
      text-align: center;
    }

    .button {
      text-align: left;
      margin: 5px 0px 5px 0px;
    }

    .title {
      font-style: tahoma;
      color: black;
      font-size: 18px;
      font-stretch: bold;
    }

    .titleContainer {
      margin: 10px 0px 10px 0px;
      text-align: left;
    }

  </ui:style>

  <ui:with field="img" type="com.businessdirecotory.client.resources.ImagesResource"/>
  <g:HTMLPanel>

    <g:HTMLPanel addStyleNames="{style.container}">
      <g:HTMLPanel addStyleNames="{style.titleContainer}">

        <g:Label text="Моят профил" addStyleNames="{style.title}"/>

      </g:HTMLPanel>

      <g:Image ui:field="logo" visible="false"/>

      <b:Button ui:field="createProfile" visible="false" text="Създай Фирмен Профил" type="SUCCESS"/>

      <b:TabPanel tabPosition="left" ui:field="tabPanel" addStyleNames="{style.tabPanel}" visible="false">

