<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:edito='urn:import:com.businessdirecotory.client.companyprofile.view'

        >

  <ui:with field="res" type="com.businessdirecotory.client.resources.ImagesResource"/>

  <ui:style src="style.css">

  </ui:style>

  <ui:with field="img" type="com.businessdirecotory.client.resources.ImagesResource"/>
  <g:HTMLPanel>

    <g:Image resource="{res.bigLoading}" ui:field="loading"/>
    <g:HTMLPanel addStyleNames="{style.container}" visible="false" ui:field="container">

      <g:HTMLPanel addStyleNames="{style.titleContainer}">

        <g:Label text="Моят профил" addStyleNames="{style.title}"/>

      </g:HTMLPanel>

      <g:Image ui:field="logo" visible="false"/>


      <b:Button ui:field="createProfile" visible="false" text="Създай Фирмен Профил" type="SUCCESS"/>

      <b:TabPanel tabPosition="left" ui:field="tabPanel" addStyleNames="{style.tabPanel}">


        <b:Tab heading="Основна информация" active="true">
          <g:HTMLPanel addStyleNames="{style.tabSylePanel}">
            <edito:CompanyEditor ui:field="editor"/>
            <g:HTMLPanel addStyleNames="{style.button}">
              <g:Image resource="{res.loadingImage}" ui:field="loadingImage" visible="false"/>
              <b:Button ui:field="edit" text="запази" type="SUCCESS"/>
            </g:HTMLPanel>
          </g:HTMLPanel>
        </b:Tab>

        <!--</b:Tab>-->

        <b:Tab heading="Лого" ui:field="logoTab">
          <!--<b:Tab heading="Лого" active="true">-->
          <!--<b:customTab>-->
          <!--<g:Image resource="{res.contactFace}"/>-->
          <!--&lt;!&ndash;</b:customTab>&ndash;&gt;
          encoding="multipart/form-data"-->

          <g:FormPanel ui:field="uploadFormPanel">
            <g:VerticalPanel>
              <b:FileUpload ui:field="fileUpload" name="logoImage"/>
              <b:TextBox ui:field="userId" visible="false" name="userId"/>
              <b:TextBox ui:field="tokenId" visible="false" name="tokenId"/>
              <b:TextBox ui:field="username" visible="false" name="username"/>
              <b:Button type="SUCCESS" ui:field="submit" text="submit" enabled="false"/>
            </g:VerticalPanel>
          </g:FormPanel>

        </b:Tab>

      </b:TabPanel>

    </g:HTMLPanel>


  </g:HTMLPanel>

</ui:UiBinder>