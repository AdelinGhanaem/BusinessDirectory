<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:edito='urn:import:com.businessdirecotory.client.companyregistration.view'>
  <ui:style>
    .paragraph {
      text-align: center;
    }

    .info {
            padding: 10px;
    }

  </ui:style>
  <b:Modal title="Нова Регистрация" ui:field="dialogBox" animation="true">

    <edito:CompanyEditor ui:field="companyEditor"/>

      <g:HTMLPanel addStyleNames="{style.info}">
        <p style="{style.paragraph}">След успешна регистрация,при въвеждане на основната нужна информация,ще можете да редактирате и добаяте нова информация за вашета фирма в контрол панела.
        </p>
      </g:HTMLPanel>


    <b:ModalFooter>
      <b:Button type="SUCCESS" ui:field="register" text="Регистрирай"/>
    </b:ModalFooter>


  </b:Modal>
</ui:UiBinder>