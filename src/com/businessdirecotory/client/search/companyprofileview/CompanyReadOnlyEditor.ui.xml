<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:base="urn:import:com.github.gwtbootstrap.client.ui.base"
             xmlns:editors="urn:import:com.businessdirecotory.client.search.companyprofileview">

  <ui:with field="res" type="com.businessdirecotory.client.resources.ImagesResource"/>

  <ui:style>
    .controlGroup {
      margin: 5px;
    }

    .editorContainer {
      padding: 5px;
      margin: auto;
      text-align: center;
    }

    .companyField {
      font-size: 16px;
      /*font-weight: bold;*/
      font-family: tahoma;
      border-bottom: 1px solid #ececec;
      text-align: left;
    }

    .companyField img {
      width: 100%;
      border: 1px #cccccc solid;
      margin: 5px 5px 5px 0px;
      /*border-bottom: 1px solid #ececec;*/
      /*text-align: left;*/
    }

    .icon {
      cursor: pinter;
      margin: 3px;
    }

    .companyName {
      padding-top: 20px;
      border-bottom: 1px solid #cccccc;
      height: 50px;
      text-align: center;
      font-size: 30px;
      font-weight: bold;
      background: url("resources/images/namebg.png");
    }

    .imageContainer {
      text-align: left;
    }

    .cleaner {
      clean: both;
    }

    .address {
      border: 1px solid #cccccc;
      border-radius: 10px;
      width: 60%;
      margin: auto;
    }

    .tab {

      text-align: center;
      margin: auto;

    }

    .tabwrapper {

    }

    .title {
      margin: 10px;
      font: 25px bold;
    }

  </ui:style>
  <g:HTMLPanel addStyleNames="{style.address}">


    <g:HTMLPanel addStyleNames="{style.imageContainer}">
      <g:Image ui:field="image" addStyleNames="{style.controlGroup}"/>
    </g:HTMLPanel>
    <b:TabPanel tabPosition="left" addStyleNames="{style.tabwrapper}">
      <b:TabPane active="true" heading="Основна Информация" addStyleNames="{style.tab}">

        <g:HTMLPanel addStyleNames="{style.editorContainer}">
          <legend>Основна Информация</legend>
          <editors:CompanyInformationEditor ui:field="info"/>
          <div class="cleaner"></div>
        </g:HTMLPanel>
      </b:TabPane>

      <b:TabPane heading="Адрес" addStyleNames="{style.tab}">
        <g:HTMLPanel addStyleNames="{style.editorContainer}">
          <legend>Адрес</legend>
          <editors:AddressEditor ui:field="address"/>
        </g:HTMLPanel>

      </b:TabPane>

      <b:TabPane heading="Изпрати Съобщение" addStyleNames="{style.tab}">

      </b:TabPane>
    </b:TabPanel>
  </g:HTMLPanel>

</ui:UiBinder>