<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'>

  <ui:style>
    .controlLabel {

    }

    .wrapper {
      width: 400px;
      text-align: center;
      text-align: left;
      padding: 5px;
      margin: 5px;
      border: 1px #cccccc solid;
      border-radius: 10px;
      float: left;
    }

    .label {
      border: 1px solid #dddddd;
      border-radius: 3px;
      padding: 5px;
      margin: 5px;
    }

    .title {
      margin: 10px;
      font: 25px bold;
    }

  </ui:style>
  <ui:with field="res" type="com.businessdirecotory.client.resources.ImagesResource"/>

  <g:HTMLPanel addStyleNames="{style.wrapper}">
    <g:HTMLPanel addStyleNames="{style.title}">
      <p>
        Основно информация
      </p>
    </g:HTMLPanel>
    <b:ControlGroup type="NONE">
      <g:Image resource="{res.map}"/>

      <b:ControlLabel for="companyName" addStyleNames="{style.controlLabel}">Юридическо лице</b:ControlLabel>
      <b:Controls>
        <g:Label ui:field="companyName" addStyleNames="{style.label}"/>
      </b:Controls>
    </b:ControlGroup>

    <b:ControlGroup type="NONE">
      <g:Image resource="{res.contactFace}"/>

      <b:ControlLabel for="contactFace" addStyleNames="{style.controlLabel}">Физическо лице за контакт</b:ControlLabel>
      <b:Controls>
        <g:Label ui:field="contactFace" addStyleNames="{style.label}"/>
      </b:Controls>
    </b:ControlGroup>

    <b:ControlGroup type="NONE">
      <g:Image resource="{res.phoneNumber}"/>

      <b:ControlLabel for="phoneNumber" addStyleNames="{style.controlLabel}">телефон за връзка</b:ControlLabel>
      <b:Controls>
        <g:Label ui:field="phoneNumber" addStyleNames="{style.label}"/>
      </b:Controls>
    </b:ControlGroup>

    <b:ControlGroup type="NONE">
      <g:Image resource="{res.email}"/>

      <b:ControlLabel for="email" addStyleNames="{style.controlLabel}">E-mail</b:ControlLabel>
      <b:Controls>
        <g:Label ui:field="email" addStyleNames="{style.label}"/>
      </b:Controls>
    </b:ControlGroup>


    <b:ControlGroup type="NONE">
      <g:Image resource="{res.activity}"/>

      <b:ControlLabel for="activity" addStyleNames="{style.controlLabel}">Вид дейност</b:ControlLabel>
      <b:Controls>
        <g:Label ui:field="activity" addStyleNames="{style.label}"/>
      </b:Controls>
    </b:ControlGroup>

    <b:ControlGroup type="NONE">
      <g:Image resource="{res.description}"/>

      <b:ControlLabel for="description" addStyleNames="{style.controlLabel}">Допълнителна информация</b:ControlLabel>
      <b:Controls>
        <g:TextArea ui:field="description" addStyleNames="{style.label}" readOnly="true" width="400" height="200"/>
      </b:Controls>
    </b:ControlGroup>
  </g:HTMLPanel>
</ui:UiBinder>