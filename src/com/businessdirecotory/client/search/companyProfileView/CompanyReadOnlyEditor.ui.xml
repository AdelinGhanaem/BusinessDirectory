<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:base="urn:import:com.github.gwtbootstrap.client.ui.base">

  <ui:style>
    .controlGroup {
      margin: 5px;
    }

    .editorContainer {
      padding: 30px;
      float: left;
    }

    .companyField {
      font-size: 16px;
      /*font-weight: bold;*/
      font-family: tahoma;
      border-bottom: 1px solid #ececec;
      text-align: left;
    }

    .companyField img {
      width: 100%;
      border: 1px #cccccc solid;
      margin: 5px 5px 5px 0px;
      /*border-bottom: 1px solid #ececec;*/
      /*text-align: left;*/
    }

    .icon {
      cursor: pinter;
      margin: 3px;
    }

    .companyName {
      padding-top: 20px;
      border-bottom: 1px solid #cccccc;
      height: 50px;
      text-align: center;
      font-size: 30px;
      font-weight: bold;
      background: url("resources/images/namebg.png");

    }

    .imageContainer {
      text-align: left;
    }

  </ui:style>

  <ui:with field="res" type="com.businessdirecotory.client.resources.ImagesResource"/>

  <g:HTMLPanel>
    <g:HTMLPanel addStyleNames="{style.imageContainer}">
      <g:Image ui:field="image" addStyleNames="{style.controlGroup}"/>
    </g:HTMLPanel>


    <b:TabPanel>

      <b:TabPane active="true" heading="Основна Информация">

        <g:HTMLPanel addStyleNames="{style.editorContainer}">

          <g:HTMLPanel addStyleNames="{style.companyField}">
            <!--<g:Label>Име на организацията:</g:Label>-->
            <g:Label ui:field="name" addStyleNames="{style.companyName}"></g:Label>
          </g:HTMLPanel>

          <!--<g:HorizontalPanel addStyleNames="{style.companyField}">-->
            <!--<g:HTMLPanel>-->
            <g:Image resource="{res.map}"/>
            <!--</g:HTMLPanel>-->
            <g:Label>Град:</g:Label>
            <g:Label ui:field="location"></g:Label>
          <!--</g:HorizontalPanel>-->

          <g:HorizontalPanel addStyleNames="{style.companyField}">
            <g:Image resource="{res.map}"/>
            <g:Label>Адрес:</g:Label>
            <g:Label ui:field="address"></g:Label>
          </g:HorizontalPanel>

          <g:HorizontalPanel addStyleNames="{style.companyField}">
            <g:Image resource="{res.activity}"/>
            <g:Label>Вид дейност:</g:Label>
            <g:Label ui:field="activity"></g:Label>
          </g:HorizontalPanel>

          <g:HorizontalPanel addStyleNames="{style.companyField}">
            <g:Image resource="{res.description}"/>
            <g:Label>Кратко описание:</g:Label>
            <g:Label ui:field="description"></g:Label>
          </g:HorizontalPanel>

          <g:HorizontalPanel addStyleNames="{style.companyField}">
            <g:Image resource="{res.phoneNumber}"/>
            <g:Label>Телефон за връзка:</g:Label>
            <g:Label ui:field="phoneNumber"></g:Label>
          </g:HorizontalPanel>

          <g:HorizontalPanel addStyleNames="{style.companyField}">
            <g:Image resource="{res.contactFace}"/>
            <g:Label>лице за контакт:</g:Label>
            <g:Label ui:field="contactFace"></g:Label>
          </g:HorizontalPanel>


          <g:HorizontalPanel addStyleNames="{style.companyField}">

            <g:Image resource="{res.faceBook}" ui:field="facebookImage" addStyleNames="{style.icon}"/>

            <g:Image resource="{res.plus}" ui:field="plusImage" addStyleNames="{style.icon}"/>

            <g:Image resource="{res.twitter}" ui:field="twitterImage" addStyleNames="{style.icon}"/>

          </g:HorizontalPanel>

        </g:HTMLPanel>
      </b:TabPane>
      <b:TabPane heading="Карта">

      </b:TabPane>
      <b:TabPane heading="Изпраи съобщение">
      </b:TabPane>
      <b:TabPane>
      </b:TabPane>
    </b:TabPanel>
  </g:HTMLPanel>

</ui:UiBinder>