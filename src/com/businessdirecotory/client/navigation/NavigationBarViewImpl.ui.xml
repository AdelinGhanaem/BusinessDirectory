<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
             xmlns:base="urn:import:com.github.gwtbootstrap.client.ui.base">

  <ui:style src="navigationStyle.css"/>

  <g:FlowPanel addStyleNames="{style.navigation}">
    <b:Navbar addStyleNames="{style.navigationBar}">

      <b:Nav alignment="LEFT">
        <b:NavLink text="Начало" ui:field="home"/>
        <b:NavLink text="Вход" ui:field="login"/>
        <b:NavLink text="Регистрация" ui:field="registration"/>
        <b:NavLink text="За нас" ui:field="aboutUs"/>
      </b:Nav>

      <b:Nav alignment="RIGHT">
        <g:HorizontalPanel>
          <g:Label ui:field="usernameBrand" addStyleNames="{style.brand}"/>
          <b:Button type="DANGER" text="Изход" ui:field="logoutButton"/>
        </g:HorizontalPanel>
      </b:Nav>

    </b:Navbar>
  </g:FlowPanel>
</ui:UiBinder>